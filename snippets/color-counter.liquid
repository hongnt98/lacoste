{% comment %}
{% capture colour_variant %}
  {% for variant in product.variants %}
  {% for option in variant.options %}
  {% if product.options[forloop.index0] == 'Color' %}somestring,{% endif %}
  {% endfor %}
  {% endfor %}
{% endcapture %}

{% assign colour_variant_split = colour_variant | split: 'somestring,' | uniq %}
{% assign colour_count = colour_variant_split.size | minus: 2 %}

{% if colour_count >= 1 %}+ {{colour_count}} {{colour_count | pluralize: 'color', 'colors' }}{% endif %}
{% endcomment %}

{% assign colour_count = product.options_with_values.first.values | size | minus: 1 %}
{% if colour_count >= 1 %}+ {{colour_count}} {{colour_count | pluralize: 'color', 'colors' }}{% endif %}