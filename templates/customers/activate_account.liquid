<div class="page-width text-center password-activation">
  <div class="grid">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter  pa-container">
      <div class="section-header">
        <h1 class="banner-nav-subtitle title--medium ff-bold l-vmargin--large">{{ 'customer.activate_account.title' | t }}</h1>
        <p class="l-vmargin--small">{{ 'customer.activate_account.subtext' | t }}</p><br>
      </div>

      <div class="form-vertical">
        {% form 'activate_customer_password' %}

          {%- if form.errors -%}
            <div class="form-message form-message--error">
              {{ form.errors | default_errors }}
            </div>
        {%- endif -%}
        <div>
          <label for="CustomerPassword" class="l-vmargin--small label--hidden">{{ 'customer.activate_account.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}">
          <br>
        </div>
        <br>
        <div>
          <label for="CustomerPasswordConfirmation" class="l-vmargin--small label--hidden">{{ 'customer.activate_account.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
          <br>
        </div>
        <br>
        <div>
        <input type="submit" class="btn" value="{{ 'customer.activate_account.submit' | t }}"><br>
        <div><br><input type="submit" class="btn" name="decline" value="{{ 'customer.activate_account.cancel' | t }}"></div>
        </div>
      </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
  .password-activation .pa-container {
    margin: 0px auto;
  }
</style>