<div class="js-modular-push js-promotions grid cell-25 flex-m--col bg-white l-padding-bottom-row-small text-center" data-id="lacoste-polo-shop-story-1-component-1" data-theme="text-black">
  <div class="cell-12 cell-m-25 offset-m-0 order-m-2">
    <div class="l-block l-relative">
      <div class="js-static-video-wrapper static-video-wrapper video-wrapper-desktop js-video l-overflow-hidden l-overlay is-background is-ready">
        <video playsinline="true" class="js-video-toggle l-block img-cover" src="{{ section.settings.desktop_video }}"></video>

        <div class="js-video-controls static-video-controls text-white flex flex--space-between flex--align-center">
          <!---->
          <button class="static-video-btn btn-play">
             <svg role="presentation" aria-hidden="true" class="icon-svg icon-play">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-play-pause"></use>
             </svg>
             <!---->
          </button>
          <!---->
       </div>
      </div>
      <div class="js-static-video-wrapper static-video-wrapper video-wrapper-mobile js-video-mobile l-overflow-hidden l-overlay is-background is-ready">
        <video playsinline="true" poster="{{ section.settings.mobile_poster | img_url: 'master' }}" class="js-video-toggle l-block img-cover" src="{{ section.settings.mobile_video }}"></video>

        <div class="js-video-controls static-video-controls text-white flex flex--space-between flex--align-center">
          <!---->
          <button class="static-video-btn btn-play">
             <svg role="presentation" aria-hidden="true" class="icon-svg icon-play">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-play-pause"></use>
             </svg>
             <!---->
          </button>
          <!---->
       </div>
      </div>
    </div>
  </div>
  <div class="cell-11 padding-1 offset-1 flex flex--align-center l-vspaced-row-1 cell-m-25 offset-m-0 padding-m-2 l-vspaced-row-m-2 order-m-1">
    <div>
      {%- if section.settings.title or section.settings.description -%}
      <div class="l-vmargin--large">
        <h2 class="title--xlarge text-black l-vmargin--medium">
          {{ section.settings.title }}
        </h2>
        <div class="text-grey fs--medium">
          <div>
            {{ section.settings.description }}
          </div>
        </div>
      </div>
      {%- endif -%}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Icomic Women Description",
    "settings": [
      {
        "type": "text",
        "id": "desktop_video",
        "label": "Desktop Video"
      },
      {
        "type": "text",
        "id": "mobile_video",
        "label": "Mobile Video"
      },
      {
        "type": "image_picker",
        "id": "mobile_poster",
        "label": "Mobile Poster (Required)"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title" 
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description" 
      }
    ]
  }
{% endschema %}