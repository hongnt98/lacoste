<div class="js-modular-push js-promotions grid cell-25 flex-m--col bg-white l-padding-top-row-small l-padding-bottom-row-small" data-id="lacoste-polo-shop-story-1-component-1" data-theme="text-black">
  <div class="cell-14 cell-m-25 offset-m-0">
    <div class="l-block l-relative l-ratio--4-3">
      <div class="js-lazyload-wrapper with-placeholder l-overlay lazyload">
        {%- if section.settings.layer_story_mob or section.settings.layer_story_desktop -%}
          <picture class="pict l-absolute img-cover img-cover--center lazyload">
            <source media="(max-width: 767px)" data-srcset="{{ section.settings.layer_story_mob | img_url: '320x' }} 320w,{{ section.settings.layer_story_mob | img_url: '375x' }} 375w,{{ section.settings.layer_story_mob | img_url: '414x' }} 414w,{{ section.settings.layer_story_mob | img_url: '767x' }} 767w" sizes="(max-width: 320px) 320px,(min-width: 321px) and (max-width: 375px) 375px,(min-width: 376px) and (max-width: 414px) 414px,(min-width: 415px) and (max-width: 767px) 767px">
            <source media="(min-width: 768px)" data-srcset="{{ section.settings.layer_story_desktop | img_url: '594x' }} 594w,{{ section.settings.layer_story_desktop | img_url: '640x' }} 640w,{{ section.settings.layer_story_desktop | img_url: '767x' }} 767w,{{ section.settings.layer_story_desktop | img_url: '914x' }} 914w,{{ section.settings.layer_story_desktop | img_url: '1024x' }} 1024w" sizes="(min-width: 768px) and (max-width: 1024px) 594px,(min-width: 1025px) and (max-width: 1190px) 640px,(min-width: 1191px) and (max-width: 1366px) 767px,(min-width: 1367px) and (max-width: 1680px) 914px,1024px">
            <img alt="lacoste-polo-shop-story-1-component-1" width="100%" height="auto" data-src="{{ section.settings.layer_story_desktop | img_url }}" class="l-absolute img-cover img-cover--center js-lazyload lazyload" data-was-processed="true">
          </picture>
        {%- endif -%}
        <noscript>
          <img class="noscript-content" src="{{ section.settings.layer_story_desktop | img_url }}" alt="lacoste-polo-shop-story-1-component-1" width="auto" height="auto" />
        </noscript>
        <div class="lqip l-ratio--[object Object] pointer-none"></div>
      </div>
    </div>
  </div>
  <div class="cell-8 padding-1 offset-1 flex flex--align-center l-vspaced-row-1 cell-m-25 offset-m-0 padding-m-2 l-vspaced-row-m-2 ">
    <div>
      {%- if section.settings.layer_title or section.settings.page_title_description -%}
      <div class="l-vmargin--large">
        <h2 class=" title--xlarge text-black">
          {{ section.settings.layer_title }}
        </h2>
        <div class="text-grey  fs--medium">
          <div>
            {{ section.settings.page_title_description }}
          </div>
        </div>
      </div>
      {%- endif -%}
      {%- for block in section.blocks -%}
      	{%- if block.type == 'buttons' -%}
        <a class="btn-cta text-white l-hmargin--small l-vmargin--small pointer-auto  fs--medium ff-normal" href="{{ block.settings.button_url }}">
          {{ block.settings.button_text }}
        </a>
      	{%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Layer Story",
    "settings": [
      {
        "type": "image_picker",
        "id": "layer_story_mob",
        "label": "Mobile Image"
      },
      {
        "type": "image_picker",
        "id": "layer_story_desktop",
        "label": "Desktop Image"
      },
      {
        "type": "text",
        "id": "layer_title",
        "label": "Overlay Title" ,
        "default": "Pick Your Iconic" 
      },
      {
        "type": "textarea",
        "id": "page_title_description",
        "label": "Title Description" ,
        "default": "Reissued or inspired from the archives, this season the polo is playing the authenticity card. A relaxed cut and unbuttoned open collar for women. A two-tone ribbon and Lacoste badge on the sleeve give a vintage look for men." 
      }
    ],
    "blocks": [
      {
        "type": "buttons",
        "name": "Button with Links" ,
        "settings": [
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button Link"
          }
        ]
      }
    ]
  }
{% endschema %}

