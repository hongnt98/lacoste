<div class="js-modular-layer js-promotions-layer modular-layer l-relative grid cell-25 bg-white  l-padding-top-row-large l-padding-bottom-row-large" id="lacoste-novak-djokovic-slider-tiles-1" data-layer="layer_slider_tiles" data-tracking="">
  <div class="l-vmargin--large padding-1 padding-m-2 cell-13 cell-mt-21 cell-m-25">
    <h2 class="js-modular-title title--xlarge text-black">
      {{ section.settings.title }}
    </h2>
  </div>
  <div class="l-relative cell-25">
    <div class="js-slideshow-wrapper cell-mt-10 cell-m-20 offset-m-1 swiper-container-horizontal" dir="ltr">
      <ul class="js-slideshow-controls slideshow-controls flex no-mob controls-top text-black">
        <li>
          <button class="js-slideshow-control-left slideshow-button-prev swiper-button-disabled" tabindex="0" role="button" aria-label="Previous slide" aria-disabled="true">
            <svg role="presentation" class="icon-svg ">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/on/demandware.static/Sites-GB-Site/-/en/v1582248012974/img/svg/non-critical.svg#icon-chevron-left"></use>
            </svg>
          </button>
        </li>
        <li class="fs--xlarge ff-bold">
          <div class="js-slideshow-indicator slideshow-indicator"></div>
        </li>
        <li>
          <button class="js-slideshow-control-right slideshow-button-next" tabindex="0" role="button" aria-label="Next slide" aria-disabled="false">
            <svg role="presentation" class="icon-svg ">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/on/demandware.static/Sites-GB-Site/-/en/v1582248012974/img/svg/non-critical.svg#icon-chevron-right"></use>
            </svg>
          </button>
        </li>
      </ul>
      <div class="js-slideshow l-relative" data-direction="ltr" data-slider-prev="Previous slide" data-slider-next="Next slide" data-slider-first="This is the first slide" data-slider-last="This is the last slide" data-slider-pagination="Go to slide {{index}}">
        {% for block in section.blocks %}
    	{% assign product = all_products[block.settings.product] %}
        <div class="slide {% if forloop.index == 1 %}is-initial{%endif%}">
          <div class="cell-mt-9 cell-m-19 l-relative l-fill-height offset-1 cell-6" data-height="{{ product.images[0].aspect_ratio }}">
            <div class="js-modular-push js-promotions l-fill-width l-relative flex bg-white  component-push-product" data-id="lacoste-novak-djokovic-slider-tiles-1-component-tile-product-1">
              <a class=" l-fill-width flex--col flex--grow " href="#" target="" data-tag-id="promotions.onPromoClick" data-tracking="" data-type="product">
                <div class="l-relative l-ratio--1  l-vmargin--small">
                  <div class="js-lazyload-wrapper with-placeholder l-overlay lazyload">
                    <picture class="pict l-block l-absolute img-cover img-cover--center lazyload">
                      <source media="(max-width: 767px)" data-srcset="{{ product.images[0] | img_url: '244x' }} 244w,{{ product.images[0] | img_url: '295x' }} 295w,{{ product.images[0] | img_url: '320x' }} 320w,{{ product.images[0] | img_url: '594x' }} 594w" sizes="(max-width: 320px) 244px,(min-width: 321px) and (max-width: 375px) 295px,(min-width: 376px) and (max-width: 414px) 320px,(min-width: 415px) and (max-width: 767px) 594px">
                      <source media="(min-width: 768px)" data-srcset="{{ product.images[0] | img_url: '320x' }} 320w,{{ product.images[0] | img_url: '375x' }} 375w,{{ product.images[0] | img_url: '414x' }} 414w,{{ product.images[0] | img_url: '457x' }} 457w" sizes="(min-width: 768px) and (max-width: 1024px) 375px,(min-width: 1025px) and (max-width: 1190px) 414px,(min-width: 1191px) and (max-width: 1366px) 320px,(min-width: 1367px) and (max-width: 1680px) 414px,457px">
                      <img alt="{{ product.title }}" width="100%" height="auto" data-src="{{ product.images[0] | img_url }}" class="l-block l-absolute img-cover img-cover--center js-lazyload lazyload" data-was-processed="true">
                    </picture>
                    <noscript>
                      <img class="noscript-content" src="{{ product.images[0] | img_url }}" alt="{{ product.title }}" width="auto" height="auto" />
                    </noscript>
                    <div class="lqip l-ratio--1 pointer-none"></div>
                  </div>
                  <div class="flex flex--align-end fs--small product-tile-colors-wrapper bg-white text-grey">
                    {% capture products_list %}
                    {% for variant in product.variants %}
                    {{ product.variants[forloop.index].options[0] }}
                    {% if forloop.last == false %}::{% endif%}
                    {% endfor %}
                    {% endcapture %}
                    {% assign products_array = products_list | split: '::'%}
                    {% assign array_count =  products_array | uniq %}
                    {% assign array_size = array_count.size %}
                    {% assign total_colors = array_size | minus: 1 %}
                    {% if total_colors <= 1 %}
                    + {{ total_colors }} colour
                    {% else %}
                    + {{ total_colors }} colours
                    {% endif %}
                  </div>
                </div>
                <div class="flex flex--col flex--grow">
                  <div class="l-vmargin--small  ">
                    <div class="text-grey fs--medium">
                      {{ product.title }}
                    </div>
                  </div>
                  <div class="ff-bold nowrap fs--medium">
                    <div class="text-grey">
                      {{ product.price | money }}
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Novak Product 1",
    "class": "page-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading" ,
        "default": "The pieces from this collection :" 
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Novak Product" ,
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ]
  }
{% endschema %}

