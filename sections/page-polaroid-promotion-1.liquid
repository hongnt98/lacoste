{% include 'polaroid-promotion-right' %}

{% schema %}
{
    "name": "Promotion 1",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Technicolour Wardrobe"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Rainbow Spirit"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Inspired by Polaroid’s signature spectrum, the collection’s colour palette commands attention and catches the light. Visually vibrant, the pieces brilliantly structure any look. Get your camera out!"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Discover"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        },
        {
            "type": "header",
            "content": "Media"
        },
        {
            "type": "select",
            "id": "media_type",
            "label": "Media Type",
            "options": [
                {
                    "value": "image",
                    "label": "Image"
                },
                {
                    "value": "video",
                    "label": "Video"
                }
            ]
        },
        {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
        },
        {
            "type": "header",
            "content": "Desktop Video"
        },
        {
            "type": "text",
            "id": "desktop_video",
            "label": "Video"
        },
        {
            "type": "image_picker",
            "id": "desktop_poster",
            "label": "Image"
        },
        {
            "type": "header",
            "content": "Mobile Video"
        },
        {
            "type": "text",
            "id": "mobile_video",
            "label": "Video"
        },
        {
            "type": "image_picker",
            "id": "mobile_poster",
            "label": "Image"
        }
    ]
}
{% endschema %}