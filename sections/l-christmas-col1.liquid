  {
    "name": "Exclusive Products",
    "class": "page-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading" ,
        "default": "Christmas Exclusive Products" 
      }
    ],
    "blocks": [
      {
        "type": "exclusive",
        "name": "Exclusive collection" ,
        "settings": [
