          },
		  {
            "type": "text",
            "id": "data_group",
            "label": "Category"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Christmas Slider" ,
        "category": "Advanced layout"
      }
    ]
  }
