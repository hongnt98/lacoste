{%- if section.settings.layer_title or section.settings.layer_description -%}
<div class="l-vmargin--large padding-1 padding-m-2 cell-13 cell-mt-21 cell-m-25">
  <h2 class="js-modular-title title--xlarge text-black">
    {{ section.settings.layer_title }}
  </h2>
  <div class="text-grey js-modular-text fs--medium">
    {{ section.settings.layer_description }}
  </div>
</div>
{%- endif -%}
<div class="l-relative cell-25">
  <div class="js-slideshow-wrapper cell-mt-10 cell-m-20 offset-m-1 swiper-container-horizontal" dir="ltr">
    <ul class="js-slideshow-controls slideshow-controls flex no-mob controls-top text-black">
      <li>
        <button class="js-slideshow-control-left slideshow-button-prev swiper-button-disabled" tabindex="0" role="button" aria-label="Previous slide" aria-disabled="true">
          <svg role="presentation" class="icon-svg ">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-chevron-left"></use>
          </svg>
        </button>
      </li>
      <li class="fs--xlarge ff-bold">
        <div class="js-slideshow-indicator slideshow-indicator">1 / 8</div>
      </li>
      <li>
        <button class="js-slideshow-control-right slideshow-button-next" tabindex="0" role="button" aria-label="Next slide" aria-disabled="false">
          <svg role="presentation" class="icon-svg ">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-chevron-right"></use>
          </svg>
        </button>
      </li>
    </ul>
    <div class="js-slideshow l-relative" data-direction="ltr" data-slider-prev="Previous slide" data-slider-next="Next slide" data-slider-first="This is the first slide" data-slider-last="This is the last slide" data-slider-pagination="Go to slide {{index}}" data-slider-notification="">
      {%- for slide in section.blocks -%}
      <div class="{% if slide.settings.layer_slide_initial %}is-initial{% endif %} slide">
        <div class="cell-mt-9 cell-m-19 l-relative l-fill-height flex offset-1 cell-6">
          <div class="js-modular-push js-promotions l-fill-width l-relative flex bg-white  component-push-basic" data-id="lacoste-polo-shop-slider-tiles-1-component-1">
            <a class=" l-fill-width flex--col flex--grow" href="{{ slide.settings.layer_slide_link }}" data-tracking="" data-type="category">
              <div class="l-relative l-ratio--5-7  l-vmargin--small">
                <div class="js-lazyload-wrapper with-placeholder l-overlay lazyload">
                  <picture class="pict l-block l-absolute img-cover img-cover--center lazyload">
                    <source media="(max-width: 767px)" data-srcset="{{ slide.settings.layer_slide_img | img_url: '244x' }} 244w,{{ slide.settings.layer_slide_img | img_url: '295x' }} 295w,{{ slide.settings.layer_slide_img | img_url: '320x' }} 320w,{{ slide.settings.layer_slide_img | img_url: '594x' }} 594w" sizes="(max-width: 320px) 244px,(min-width: 321px) and (max-width: 375px) 295px,(min-width: 376px) and (max-width: 414px) 320px,(min-width: 415px) and (max-width: 767px) 594px">
                    <source media="(min-width: 768px)" data-srcset="{{ slide.settings.layer_slide_img | img_url: '320x' }} 320w,{{ slide.settings.layer_slide_img | img_url: '375x' }} 375w,{{ slide.settings.layer_slide_img | img_url: '414x' }} 414w,{{ slide.settings.layer_slide_img | img_url: '457x' }} 457w" sizes="(min-width: 768px) and (max-width: 1024px) 375px,(min-width: 1025px) and (max-width: 1190px) 414px,(min-width: 1191px) and (max-width: 1366px) 320px,(min-width: 1367px) and (max-width: 1680px) 414px,457px">
                    <img alt="The Classic fit" width="100%" height="auto" data-src="{{ slide.settings.layer_slide_img | img_url }}" class="l-block l-absolute img-cover img-cover--center js-lazyload lazyload" data-was-processed="true">
                  </picture>
                  <noscript>
                    <img class="noscript-content" src="{{ slide.settings.layer_slide_img | img_url }}" alt="The Classic fit" width="auto" height="auto" />
                  </noscript>
                  <div class="lqip l-ratio--5-7 pointer-none"></div>
                </div>
              </div>
              <div class="flex flex--col flex--grow">
                {%- if slide.settings.layer_slide_title -%}
                <div class="l-vmargin--small  ">
                  <h3 class="title--large l-vmargin--xsmall text-black">
                    {{ slide.settings.layer_slide_title }}
                  </h3>
                  <div class="text-grey fs--medium">
                    {{ slide.settings.layer_slide_description }}
                  </div>
                </div>
                {%- endif -%}
                {%- if slide.settings.layer_slide_linktext -%}
                <span class="reverse-link fs--medium text-grey">
                  {{ slide.settings.layer_slide_linktext }}
                </span>
                {%- endif -%}
              </div>
            </a>
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
  </div>
</div>
{% schema %}
  {
    "name": "Layer Slide",
    "settings": [
      {
        "type": "text",
        "id": "layer_title",
        "label": "Layer Title" ,
        "default": "Your cut" 
      },
      {
        "type": "textarea",
        "id": "layer_description",
        "label": "Layer Description" ,
        "default": "Discover all of the Lacoste fits and find the one that suits you best." 
      }
    ],
    "blocks": [
      {
        "type": "slider",
        "name": "Slider with images" ,
        "settings": [
          {
            "type": "checkbox",
            "id": "layer_slide_initial",
            "label": "Set to initial"
          },
          {
            "type": "image_picker",
            "id": "layer_slide_img",
            "label": "Slide Image"
          },
          {
            "type": "text",
            "id": "layer_slide_title",
            "label": "Slide Title"
          },
          {
            "type": "textarea",
            "id": "layer_slide_description",
            "label": "Slide Description"
          },
          {
            "type": "text",
            "id": "layer_slide_linktext",
            "label": "Slide Button",
			"default": "Discover"
          },
          {
            "type": "url",
            "id": "layer_slide_link",
            "label": "Slide Link"
          }
        ]
      }
    ]
  }
{% endschema %}

