{%- if section.settings.page_subtitle -%}
<div class="overline text-grey-light ">
  {{ section.settings.page_subtitle }}
</div>
{%- endif -%}
{%- if section.settings.page_title -%}
<h1 class="title--xxlarge text-black">
  {{ section.settings.page_title }}
</h1>
{%- endif -%}
{%- if section.settings.page_title_description -%}
<div class="text-grey fs--medium">
  <div>
    <p>{{ section.settings.page_title_description }}</p>
  </div>
</div>
  {%- endif -%}


{% schema %}
  {
    "name": "Polo Header Title",
	"class":"js-promotions offset-7 text-center cell-11 cell-m-21 offset-m-2",
    "settings": [
      {
        "type": "text",
        "id": "page_title",
        "label": "Heading" ,
        "default": "Lacoste Polo Shop" 
      },
      {
        "type": "text",
        "id": "page_subtitle",
        "label": "Subtitle" ,
        "default": "Pick Your Iconic" 
      },
      {
        "type": "text",
        "id": "page_title_description",
        "label": "Title Description" ,
        "default": "The perfect place to find the polo that's made for you." 
      }
    ]
  }
{% endschema %}

