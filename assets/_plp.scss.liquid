.popin-filters {
    .icon-croco-loader {
        display: none;
    }

    .checkbox-custom {
        &:checked + .swatch-wrapper {
            border-color: $silver;
        }

        &:checked + .btn-cta {
            color: white;
            background-color: $mineshaft;
        }

        & + .checkbox-label {
            flex-direction: row-reverse;
        }

        &:disabled + .checkbox-label::before {
            content: " ";
            background-image: svg-url('<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40"><path d="M17.2,27l-8.6-7.2c-0.3-0.2-0.3-0.7-0.1-1c0.2-0.3,0.7-0.3,1-0.1l7.7,6.3l13.1-11.8c0.3-0.3,0.7-0.2,1,0.1 s0.2,0.7-0.1,1L17.2,27z"/></svg>');
            background-color: $wildsand;
        }
    }
}

@include respond-to(tablet-and-desktop) {
    .plp-header-cover {
        position: absolute;
        top: 0;
        left: 0;
    }

    .plp-description {
        padding-bottom: $plp-sortfilter-height;
    }

    .plp-categories {
        column-count: 2;
        // column-width: calc(5 * #{$grid-column-width-ie}); // TODO TMP IE11 hack (delete when IE11 is over)
        // column-width: calc(5 * #{$grid-column-width});
        column-gap: calc(1 * #{$grid-column-width-ie}); // TODO TMP IE11 hack (delete when IE11 is over)
        column-gap: calc(1 * #{$grid-column-width});

        .plp-category-link {
            line-height: 1.3;
        }
    }

    .plp-header + .plp-body {
        margin-top: calc(-5 * #{$grid-column-width-ie} - #{$plp-sortfilter-height}); // TODO TMP IE11 hack (delete when IE11 is over)
        margin-top: calc(-5 * #{$grid-column-width} - #{$plp-sortfilter-height});

        &.no-overlap {
            margin-top: 0;
        }
    }
}
