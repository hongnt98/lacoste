// home sliders
.template-index {
  .js-slideshow-wrapper {
    width: 100%;
    display: block;
    .flickity-button {
      display: none;
    }
  }
  .slideshow {
    width: 100%;
    display: block;
    .slide {
      flex: unset;
    }
    .flickity-page-dots {
      bottom: -30px;
    }
    .flickity-page-dots .dot {
      width: 6px;
      height: 6px;
      background-color: #292929;
      opacity: 0.5;
      &.is-selected {
        opacity: 1;
      }
    }
  }
}


// PDP - product detail pages
.template-product {
  .js-pdp-gallery {
    height: 100%;
    .js-slideshow {
      display: block;
/*       height: 100%; */
      width: 100%;
    }
    .flickity-viewport {
      height: 100%;
    }
  }
}



@media screen and (min-width: 1191px){
  /* .main-nav .nav-lvl0,  */
  .main-nav {
    .nav-lvl0-tab {
      .sub-nav {
        display: block;
        opacity: 0;
        height: 0px;
        transition: all 0.4s ease-out;
        transition-delay: 0.2s;
      }
      .nav-bg {
        background-image: linear-gradient(to bottom, white 400px, rgba(41, 41, 41, 0.0) 400px);
        transition: height 0.5s ease-out;
        &.sale-menu {
        background-image: linear-gradient(to bottom, #fff 40px, rgba(41,41,41,0) 40px)
        }
      }
      &:hover {
        .sub-nav {
          opacity: 1;
          height: auto;
          pointer-events: auto;
        }
        .nav-bg {
          height: 100%;
        }
      }
    }
  }
  .sale-menu {
    .nav-lvl1.m-padding-menu {
      max-width: 400px;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0px auto;
      li {
        width: auto;
      }
    }
  }
  
}

