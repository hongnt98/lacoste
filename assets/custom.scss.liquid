// Lacoste Inside Slider

.image-column {
  width: calc(13 *(100vw - var(--scrollbar-width))/ 25);

  @media screen and (max-width: 767px) {
    width: 100%;
  }
}

.text-column {
  width: calc(6 * (100vw - var(--scrollbar-width)) / 25);

  @media screen and (max-width: 767px) {
    width: 100%;
  }
}

 
.lacoste-inside__wrapper {
  width: 100%;
}

.lacoste-inside__slider {
  .js-slideshow-controls {
    z-index: 1;
  }

  .slideshow-controls.controls-top .slideshow-button-next, 
  .slideshow-controls.controls-top .slideshow-button-prev {
    top: 22px;
  }

  .icon-svg {
    width: 30px;
    height: 30px;
  }

  .slideshow-controls.controls-top {
    top: 35px;
  }

  .flickity-page-dots {
    display: none;
  }

  .slideshow-controls .slideshow-button-next[aria-disabled=true]:hover, 
  .slideshow-controls .slideshow-button-prev[aria-disabled=true]:hover {
    background-color: transparent;
  }
}

