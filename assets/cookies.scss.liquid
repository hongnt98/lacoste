.global-site-notice{
  border-radius: 15px;
  bottom: 100px;
  right: 20px;
  width: 280px;
  padding: 1.2em;
  color: #fff !important;
  z-index: 9999;
  max-height: 220px;
  will-change: transform;
  background-color: rgba(0,0,0,0.95) !important;
  position: fixed;
  box-shadow: 3px 3px 8px #ccc;
  .notice-inner{
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    font-size: 100%;
    vertical-align: baseline;
    .notice-text{
      font-size: 16px;
      line-height: 1.3em;
      margin: 0 0 10px 0;
      color: #fff;
      span{
        margin: 0;
        padding: 0;
        border: 0;
        font: inherit;
        font-size: 100%;
        vertical-align: baseline;
        a{
          color: #105a33;
          text-decoration: underline;
        }
      }
    }
    .actions{
      .button{
        border-radius: 5px;
        -webkit-appearance: none;
        padding: 12px;
        font-size: 16px !important;
        background-color: #105a33;
        color: #fff;
        border: none;
        width: 100%;
        font-weight: bold;
        text-transform: uppercase;
        text-align: center;
        span{
          span{


          }
        }
      }
    }
  }
}